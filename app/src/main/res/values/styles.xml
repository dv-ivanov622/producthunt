<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!--Style for Toolbar spinner items-->
    <style name="ToolbarTitleAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Product title-->
    <style name="ProductTitleAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--Product description-->
    <style name="ProductDescriptionAppearance">
        <item name="android:textColor">#afa0a0</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--Button title Get it-->
    <style name="ButtonGetItAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
